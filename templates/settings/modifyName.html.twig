{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
		<div class="row">
			<div class="login-form bg-light mt-4 p-4">

				{{ form_start(nameForm) }}

				<h1 class="h3 mb-3 font-weight-normal">{{ 'settings.modifyName.title'|trans }}</h1>
				
				<div class="col-12 mt-3">
					{{ form_row(nameForm.name, { 'label': 'settings.modifyName.username'|trans })  }}
				</div>

				<div class="col-6">
					<button class="btn btn-lg btn-primary" type="submit">{{ 'settings.modifyName.form'|trans }}</button>
				</div>

				{{ form_rest(nameForm) }}
				{{ form_end(nameForm) }}

			</div>
		</div>
	</div>
{% endblock %}