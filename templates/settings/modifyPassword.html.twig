{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ "settings.title"|trans }}</h1>
		
		<div class="row">
			<div class="login-form bg-light mt-4 p-4">
				<h1 class="h3 mb-3 font-weight-normal">{{ 'settings.modifyPassword.title'|trans }}</h1>

				{{ form_start(passwordForm) }}

				<div class="row">
					<div class="col-6">
						{{ form_row(passwordForm.plainPassword.password, { 'label' : 'settings.modifyPassword.password'|trans }) }}
					</div>

					<div class="col-6">
						{{ form_row(passwordForm.plainPassword.confirm, { 'label' : 'settings.modifyPassword.confirm'|trans }) }}
					</div>
				</div>

				<div class="col-6">
					<button class="btn btn-lg btn-primary" type="submit">{{ 'main.update'|trans }}</button>
				</div>

				{{ form_rest(passwordForm) }}
				{{ form_end(passwordForm) }}

			</div>
		</div>
	</div>
{% endblock %}
