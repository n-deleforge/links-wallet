{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ "settings.title"|trans }}</h1>

		<div class="bg-light p-3 mt-3">
			<h2>{{ "settings.account.title"|trans }}</h2>
			<div class="p-2">
				<a class="btn btn-primary" href="{{ path('app_settings_updateName') }}" role="button">{{ "settings.account.updateName"|trans }}</a>
				<a class="btn btn-primary" href="{{ path('app_settings_updateEmail') }}" role="button">{{ "settings.account.updateEmail"|trans }}</a>
				<a class="btn btn-primary" href="{{ path('app_settings_updatePassword') }}" role="button">{{ "settings.account.updatePassword"|trans }}</a>
			</div>
		</div>

		<div class="bg-light p-3 mt-3">
			<h2>{{ "settings.data.title"|trans }}</h2>
			<div class="p-2">
				<a class="btn btn-danger" href="{{ path('app_settings_deleteAccount') }}" role="button">{{ "settings.data.deleteAccount"|trans }}</a>
			</div>
		</div>

	</div>
{% endblock %}
