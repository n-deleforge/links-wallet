{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ "readme.title"|trans }}</h1>

		<div class="bg-light p-3 mt-3">
			<h1 class="h3 mb-3 font-weight-normal">{{ title|trans }}</h1>

			{{ form_start(readmeForm) }}

			<div class="row">
				<div class="col-6">
					{{ form_row(readmeForm.model, { 'label' : 'readme.form.model'|trans }) }}
				</div>

				<div class="col-6">
					{{ form_row(readmeForm.username, { 'label' : 'readme.form.username'|trans }) }}
				</div>
			</div>

			<div class="col-6">
				<button class="btn btn-primary" type="submit">{{ 'main.add'|trans }}</button>
				<a class="btn btn-secondary" href="{{ path('app_readme') }}">{{ 'main.back'|trans }}</a>
			</div>

			{{ form_rest(readmeForm) }}
			{{ form_end(readmeForm) }}

		</div>
	</div>
{% endblock %}
