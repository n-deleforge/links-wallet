{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ "readme.title"|trans }}</h1>

		<div class="bg-light p-3 mt-3">
			<h2>{{ "readme.actionMenu"|trans }}</h2>
			<div class="py-2">
				<a class="btn btn-primary" href="{{ path('app_readme_add') }}" role="button">{{ "readme.addLink"|trans }}</a>
				<a class="btn btn-primary" href="{{ path('app_view_readme', {username: app.user.name}) }}" role="button">{{ "readme.seeReadme"|trans }}</a>
			</div>
		</div>

		<div class="bg-light p-3 mt-3">
			<h2>{{ "readme.listMenu"|trans }}</h2>

			{% if app.user.linkUsers|length == 0 %}
				<p>{{ "readme.noLinks"|trans }}</p>
			{% else %}
				<table class="table table-hover table-striped table-condensed">
					<thead>
						<tr class="text-center">
							<th width="30%" scope="col">{{ 'readme.model'|trans }}</th>
							<th width="50%" scope="col">{{ 'readme.username'|trans }}</th>
							<th width="20%" scope="col">{{ 'readme.actions'|trans }}</th>
						</tr>
					</thead>
					<tbody>
						{%for link in app.user.linkUsers %}
							<tr>
								<td class="align-middle"><i class="{{ link.model.icon }}"></i> {{ link.model.name }}</td>
								<td class="align-middle">{{ link.username }}</td>
								<td class="text-center">
									<a class="btn btn-primary btn-sm" href="{{ path('app_readme_edit', { id:link.id }) }}">{{ 'main.modify'|trans }}</a>
									<a class="btn btn-danger btn-sm" href="{{ path('app_readme_delete', { id:link.id }) }}">{{ 'main.delete'|trans }}</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endif %}

		</div>
	</div>
{% endblock %}