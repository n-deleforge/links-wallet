{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ user.name }}</h1>

		<div class="p-3 mt-3">
			{% if user.linkUsers|length == 0 %}
				<p>{{ 'readme.view.empty'|trans }}</p>
			{% else %}
				<div class="mt-3 text-center">
					{% for link in user.linkUsers %}
						<div class="p-2">
							<i class="{{ link.model.icon }}"></i>
							<a class="text-decoration-none" href="{{ link.model.url }}{{ link.username }}">{{ link.model.name }}</a>
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
