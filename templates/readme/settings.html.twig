{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>{{ "readme.title"|trans }}</h1>

		{{ form_start(settingsForm) }}
		<div class="bg-light p-3 mt-3">
			<h1 class="h3 mb-3 font-weight-normal">{{ 'readme.settings.visibility.title'|trans }}</h1>

			{{ form_row(settingsForm.isVisible, { 'label' : 'readme.settings.visibility.input'|trans }) }}
		</div>

		<div class="bg-light p-3 mt-3">
			<h1 class="h3 mb-3 font-weight-normal">{{ 'readme.settings.bio.title'|trans }}</h1>

			{{ form_row(settingsForm.bio, { 'label' : 'readme.settings.bio.input'|trans }) }}
		</div>

		<div class="p-3">
			<div class="col-6">
				<button class="btn btn-primary" type="submit">{{ 'main.update'|trans }}</button>
				<a class="btn btn-secondary" href="{{ path('app_readme') }}">{{ 'main.back'|trans }}</a>
			</div>
		</div>

		{{ form_rest(settingsForm) }}
		{{ form_end(settingsForm) }}

	</div>
{% endblock %}
