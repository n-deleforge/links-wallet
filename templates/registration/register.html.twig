{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
			<div class="row">
				<div class="login-form bg-light mt-4 p-4">
	
					{{ form_start(registrationForm) }}
	
	                	<h1>{{ 'register.title'|trans }}</h1>
	
	                    {% for flash_error in app.flashes('verify_email_error') %}
	                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	                    {% endfor %}

						<div class="col-12 mt-3">
	                    {{ form_row(registrationForm.email, { 'label': 'register.email'|trans })  }}
						</div>

						<div class="row">
							<div class="col-6">
							{{ form_row(registrationForm.password.password, { 'label' : 'register.password'|trans }) }}
							</div>

							<div class="col-6">
							{{ form_row(registrationForm.password.confirm, { 'label' : 'register.confirm'|trans }) }}
							</div>
						</div>

						<div class="col-6">
							<button class="btn btn-lg btn-primary" type="submit">{{ 'register.form'|trans }}</button>
						</div>

						{{ form_rest(registrationForm) }}
					{{ form_end(registrationForm) }}
	
				</div>
			</div>
		</div>
	
	

